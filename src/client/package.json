{
  "name": "renderer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-main/index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:renderer dev:main",
    "dev:main": "npm run build:main && electron .",
    "dev:renderer": "vite renderer",
    "build:main": "tsc --project main/tsconfig.electron.json",
    "build:renderer": "tsc -b && vite build renderer",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "electron": "^38.2.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
