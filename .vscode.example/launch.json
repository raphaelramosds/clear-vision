{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run cvision",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/core/build/cvision",
            "args": [
                "${workspaceFolder}/core/video_rua01.mp4",
                "-m",
                "${workspaceFolder}/core/yolov8n.onnx",
                "-n",
                "${workspaceFolder}/core/coco.names",
                "-t",
                "0.2",
            ],
            "cwd": "${workspaceFolder}/core",
            "preLaunchTask": "build-detect",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for GDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Run cvision with OpenMP",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/core/build/cvision",
            "args": [
                "${workspaceFolder}/core/canal1-1min.mp4",
                "-m",
                "${workspaceFolder}/core/yolov8n.onnx",
                "-n",
                "${workspaceFolder}/core/coco.names",
                "-t",
                "0.2",
            ],
            "cwd": "${workspaceFolder}/core",
            "preLaunchTask": "build-detect-openmp",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for GDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Run cvision CPU only",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/core/build/cvision",
            "args": [
                "${workspaceFolder}/core/video_rua01.mp4",
                "-m",
                "${workspaceFolder}/core/yolov8n.onnx",
                "-n",
                "${workspaceFolder}/core/coco.names",
                "-t",
                "0.2",
            ],
            "cwd": "${workspaceFolder}/core",
            "preLaunchTask": "build-detect-cpu",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for GDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Run playground batch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/playground/batch",
            "args": [
                "${workspaceFolder}/playground/video_rua01.mp4"
            ],
            "cwd": "${workspaceFolder}/playground",
            "preLaunchTask": "build-playground",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for GDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}